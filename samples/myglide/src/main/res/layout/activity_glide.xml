<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
   <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/glide_bug_activity"
      style="@style/TVStyle"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:padding="10dp"
      android:gravity="center"
      android:onClick="glideBug"
      android:text="GlideBug"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toTopOf="parent" />

   <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/glide_bug_tv_activity"
      style="@style/TVStyle"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:padding="10dp"
      android:gravity="center"
      android:onClick="glideTVBug"
      android:text="GlideBugTV"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@+id/glide_bug_activity" />

   <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_four"
      style="@style/TVStyle"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:padding="10dp"
      android:gravity="center"
      android:onClick="glideFlow"
      android:text="GlideFLow"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@+id/glide_bug_tv_activity" />

   <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/glide_bug_tv_activity_recycler"
      style="@style/TVStyle"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:padding="10dp"
      android:gravity="center"
      android:onClick="glideTVBugRecycler"
      android:text="GlideBugTVRecycler"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@+id/tv_four" />

   <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/glide_bug_tv_activity_half_image"
      style="@style/TVStyle"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:padding="10dp"
      android:gravity="center"
      android:onClick="glideTVBugHalfImage"
      android:text="GlideBugTVHalfImage"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@+id/glide_bug_tv_activity_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>